<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/definitionCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/activity_horizontal_margin"
                                    android:visibility="gone"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/definitionsLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/definitions"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/seeAllDefinitionsBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/exampleLbl"
            android:layout_alignParentRight="true"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/see_all"
            android:textAllCaps="true"
            android:textColor="@color/textColorGrey"
            android:textSize="@dimen/small_text_size"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/definitionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/definitionsLbl"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
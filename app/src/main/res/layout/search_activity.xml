<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:transitionName="search_transition_name">

        <com.mydictionary.ui.views.search.SearchEditText
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_subtitle_height"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/search_edittext_backgr"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="@dimen/search_drawable_padding"
            android:drawableRight="@drawable/ic_mic_black_24dp"
            android:hint="@string/search_the_word"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textColor="@color/textSecondary"
            android:transitionName="search_field_transition_name" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/searchScrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_with_padding"
                    android:showDividers="middle">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/searchRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/moreHistoryBtn"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/search_list_item_white_selector"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/search_icon_padding"
                        android:paddingLeft="@dimen/recent_history_btn_padding_left"
                        android:paddingTop="@dimen/search_icon_padding"
                        android:singleLine="true"
                        android:text="@string/more_from_recent_history"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorGrey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>